<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codice.ddf.spatial</groupId>
        <artifactId>wfs-v2.0.0</artifactId>
        <version>2.5.0-SNAPSHOT</version>
    </parent>
    <artifactId>spatial-wfs-v2_0_0-schema-bindings</artifactId>
    <name>DDF :: Spatial :: WFS :: v2.0.0 Schema Bindings</name>
    <dependencies>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>wfs-basic-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <extension>true</extension>
                            <forceRegenerate>true</forceRegenerate>
                            <schemaDirectory>../spatial-wfs-v2_0_0-schema-webapp/src/main/resources</schemaDirectory>
                            <schemaIncludes>
                                <include>wfs/2.0.0/wfs.xsd</include>
                            </schemaIncludes>
                            <bindingDirectory>../spatial-wfs-v2_0_0-schema-webapp/src/main/bindings</bindingDirectory>
                            <bindingIncludes>
                                <include>binding.xjb</include>
                            </bindingIncludes>
                            <args>
                                <arg>-Xannotate</arg>
                            </args>
                            <plugins>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics-annotate</artifactId>
                                    <version>${jaxb.annotate.plugin.version}</version>
                                </plugin>
                            </plugins>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>

