<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

	<OCD name="HTTP Proxy" id="org.codice.proxy.http.properties">
		<AD
			description="Proxy endpoint name. Will be added to path: /info/services"
			name="Proxy Endpoint Name" id="endpointName" required="true" type="String" 
			default="proxy" 
		/>
		
		<AD
			description="Target URL which the request will be forwarded to (e.g. http://targetedsite.com)"
			name="Target URL" id="targetHost" required="true" type="String" 
			default="" 
		/>
		
	    </OCD>

	<Designate 	pid="org.codice.proxy.http.properties">
		<Object ocdref="org.codice.proxy.http.properties" />
	</Designate>

</metatype:MetaData>