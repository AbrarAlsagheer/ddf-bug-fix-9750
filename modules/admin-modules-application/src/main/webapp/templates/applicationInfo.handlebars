{{#is isDisabled false}}<a href="#{{appId}}-removeModal" class="fa fa-times removeApp removeHide" data-toggle="modal"></a>{{/is}}
<div id="{{appId}}-removeModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{#if removeMessage}}
                    Removing [{{appId}}] will also remove the following apps:<br><br>
                        {{#each removeMessage}}
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;[{{this}}]<br>
                        {{/each}}
                    <br>Do you want to remove all the apps listed above?<br>
                {{else}}
                    Remove [{{appId}}]?<br>
                {{/if}}
                <br>
                <button type="button" class="removeConfirm" data-dismiss="modal" aria-hidden="true">Confirm</button>
                <button type="button" class="removeCancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
        </div>
    </div>
</div>
{{#is isDisabled false}}<a href="#{{appId}}-installModal" class="fa fa-download installApp installHide" data-toggle="modal"></a>{{/is}}
<div id="{{appId}}-installModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{#if installMessage}}
                    Installing [{{appId}}] requires the following apps to be installed:<br><br>
                    {{#each installMessage}}
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;[{{this}}]<br>
                    {{/each}}
                    <br>Do you want to install all the apps listed above?<br>
                {{else}}
                    Install [{{appId}}]?<br>
                {{/if}}
                <br>
                <button type="button" class="installConfirm" data-dismiss="modal" aria-hidden="true">Confirm</button>
                <button type="button" class="installCancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
        </div>
    </div>
</div>
<header id="{{appId}}-name" class="name" >{{displayName}}</header>
<header id="{{appId}}-version" class="version">[{{version}}]</header>
<h2 class="boxDescription rowDescription">{{description}}</h2>
<a href="#{{appId}}-descriptionModal" class="btn btn-primary btn-sm descriptionButton" data-toggle="modal">More</a>
<div id="{{appId}}-descriptionModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4>Application Description:</h4>
                <h6>{{description}}</h6>
            </div>
        </div>
    </div>
</div>