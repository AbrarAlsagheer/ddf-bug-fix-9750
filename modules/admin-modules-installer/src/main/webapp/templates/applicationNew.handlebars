<div class="new-app-btn">
    <a href="#app-modal" class="btn btn-primary" data-toggle="modal">Add a new application</a>
</div>
<div id="app-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h2>Add new applications</h2>
                <h5 class="warning-info">Adding a new application will reset unsaved selections on the application tree.</h5>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#upload" data-toggle="tab">File Upload</a></li>
                    <li><a href="#url" data-toggle="tab">Maven URL</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="upload">
                        <form id="fileupload" action="/services/application" method="POST" enctype="multipart/form-data">
                            <span class="btn btn-info fileinput-button">
                                <i class="glyphicon glyphicon-plus"></i>
                                <span>Add application files...</span>
                                <input id="app-upload-btn" type="file" name="files[]" accept="audio/midi,application/java-archive" multiple>
                            </span>
                            <div class="span5 fileupload-progress">
                                <div id="fileContainer">

                                </div>
                            </div>
                            <div class="fileupload-loading"></div>
                        </form>
                    </div>
                    <div class="tab-pane" id="url">
                        <div class="url-tab">
                            <input id="urlField" type="text">
                            <a id="add-url-btn" href="#" class="btn btn-info">Add URL</a>
                            <div id="urlContainer">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary submit-button" data-dismiss="modal">Save Changes</button>
                    <button type="button" class="btn btn-default cancel-button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>