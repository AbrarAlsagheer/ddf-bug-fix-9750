<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

  <bean
    id="camelServlet"
    class="org.codice.proxy.http.HttpProxyCamelHttpTransportServlet" />
    
  <bean
    id="servletProvider"
    class="org.codice.proxy.http.CamelServletProviderImpl">
    <property name="camelServlet" ref="camelServlet" />
  </bean>

  <service ref="camelServlet" interface="org.apache.camel.component.http.CamelServlet" >
    <service-properties>
      <entry key="alias" value="/info/services" />
      <entry key="matchOnUriPrefix" value="true" />
      <entry key="servlet-name" value="CamelServlet"/>
      <entry key="osgi.web.contextpath" value="/info/services" />
    </service-properties>
  </service>
   <service
    ref="servletProvider"
    interface="org.codice.proxy.http.CamelServletProvider">
 
    <service-properties>
      <entry key="servlet-name" value="CamelServlet"/>
    </service-properties>
  </service>
  
</blueprint>